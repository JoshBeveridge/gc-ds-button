{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "gcds-components": [
      "./packages/web"
    ],
    "gcds-components-react": [
      "./packages/react"
    ],
    "gcds-components-angular": [
      "./packages/angular"
    ]
  }
}
